// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "context_servers": {
    "fluent-agent-prod": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://chat.fluentui.dev/sse"],
      "env": {}
    }
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "ui_font_family": "ProFont IIx Nerd Font Mono",
  "buffer_font_family": "ProFont IIx Nerd Font Mono",
  "tab_bar": {
    "show": false
  }
}
